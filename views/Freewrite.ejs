<!DOCTYPE html>
<html lang="ko">
<head>
    <script src="/javascripts/jquery-3.7.1.min.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>글쓰기</title>
    <style>
        header{
            background-color: #5228f5ff;
            height: 98px;
            position: relative; 
        }
        h1{
            text-align: left;            
            margin-top: 50px;
            font-family: Inter;
            font-size: 30px;
            font-style: normal;
            font-weight: 5  00;
            line-height: normal;
            margin-left:200px ;
        }
        body {
            font-family: Arial, Inter;
            margin: 0;
            padding: 0;
        }
        .container{
            margin-top:30px;
            text-align: left;
        }
        .form-group{
            margin-left:200px;
        }
        hr{
            width: 75%;
            color: #333;
            margin-top: 20px;
            margin-bottom: 20px;
        }
        .btn{
           display: block;
           width: 150px;
           height : 50px;
           background : white;
           border: 0.5px solid black;
        }
        .Wbtn{
           display: block;
           width: 150px;
           height : 50px;
           background : #5228f5ff;
           border: 0.5px solid black;
           color: white;
        }
        label{
            margin-right: 150px;
        }
        #title{
            text-align: left;
            display : inline-block;
            width : 616px;
            height : 46px;
            border : 0.3px  solid #DEF1E5;
            background: #FFFFFF;
        }
        #user_id{
            color: #F8F9FA;
        }
        #content{
            text-align: left;
            display : inline-block;
            width : 616px;
            height : 150px;
            border : 0.3px  solid #DEF1E5;
            background: #FFFFFF;
        }
        .write-button{
            text-align: center;
        }
        .btn,.Wbtn{
            display: inline-block;
        }
        input{
            text-align: left;
        }
        span.logo {
            font-family: Inter;
            font-style: normal;
            font-weight: 600;
            line-height: normal;
            margin-left: 150px;
            color: black;
            font-size: 40px;
            margin-top: 20px;
            display: inline-block;
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <header>
        <span class="logo" style="cursor: pointer;" onclick="goTohome()">따릉이</span>
    </header>
    <h1>글쓰기</h1>
    <form action="/Freewrite" id="postForm" method="post" onsubmit="return writeSubmit()">
    <div class="container">
            <hr>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" id="title" name="title" required>
            </div>
            <hr>
            <div class="form-group">
                <label for="user-id">아이디</label>
                <td id="user_id"> <%= userId %><td>
            </div>
            <hr>
            <div class="form-group">
                <label  for="content" style="position: relative; top: -60px;">내용</label>
                <textarea id="content" name="content" required></textarea>
            </div>
            <hr>
        </div>
            <div class="form-group">
                <label for="image">사진 첨부</label>
                <input type="file" id="image" name="image">
            </div>
            <hr>
        
        <div class="write-button">
            <button class="btn" type="button" style="cursor: pointer;" onclick="goToFreeboard()">취소</button>
            <button class="Wbtn" type="submit" style="cursor: pointer;" onclick="goToFreeboard()">글쓰기</button>
        </div>
    </form>
    <script>
        function writeSubmit(){
            if($("#title").val().trim()==""){
                var message = "제목을 입력하세요.";
                $("#title").val("");
                $("#title").focus();
                alert(message);
                return false;
            }
            if($("#content").val().trim()==""){
                var message = "본문 내용을 입력하세요.";
                $("#content").val("");
                $("#content").focus();
                alert(message);
                return false;
            }
        }
        function goToFreeboard() {
        window.location.href = '/Freeboard';
    }
    function goTohome(){
            window.location.href = '/';
        }
    </script>
</body>
</html>